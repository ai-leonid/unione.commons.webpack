{
  "name": "@leonid-ilin/unione.commons.webpack",
  "description": "Unione custom react component library",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/leonid-ilin"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "author": "Unione",
  "license": "ISC",
  "version": "0.0.4",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-url": "^6.1.0",
    "rollup-plugin-visualizer": "^5.5.4",
    "@svgr/rollup": "^6.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.1",
    "babel-jest": "^26.6.0",
    "babel-loader": "8.1.0",
    "babel-plugin-import": "^1.13.3",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.6.0",
    "rollup": "^2.60.0",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-less": "^1.1.3",
    "rollup-plugin-node-externals": "^3.1.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@craco/craco": "^6.1.1",
    "antd": "^4.14.1",
    "craco-less": "^1.17.1",
    "css-loader": "^6.5.1",
    "easy-bem": "^1.1.1",
    "i18next": "^20.0.0",
    "i18next-browser-languagedetector": "^6.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.11",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-use": "^17.3.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^1.0.1"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "rollup -c ./rollup.config.js",
    "build:craco": "craco build",
    "build:testing": "env-cmd -f .env.testing yarn build node --max_old_space_size=1024",
    "build:staging": "env-cmd -f .env.staging yarn build",
    "test": "craco test --env=node",
    "test:ci": "craco test --env=node --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .tsx,.ts,.js ./src/",
    "lint-fix": "eslint --ext .tsx,.ts,.js ./src/ --fix",
    "cert": "set HTTPS=true&&craco start",
    "cert:mac": "HTTPS=true craco start",
    "prepare": "husky install .husky",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "index.js",
      "route.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
